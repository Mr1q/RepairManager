<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    /*
    取消自动弹出键盘
    */
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@null"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <!--<ImageButton-->
                <!--android:id="@+id/back"-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:background="@mipmap/back" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="报修信息"
                android:textSize="20dp" />
            <!--<ImageButton-->
            <!--android:id="@+id/put"-->
            <!--android:layout_margin="2dp"-->
            <!--android:layout_width="32dp"-->
            <!--android:layout_height="32dp"-->
            <!--android:layout_gravity="end"-->
            <!--android:background="@mipmap/put"/>-->

        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light" />

        <FrameLayout
            android:id="@+id/total_Hand"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="报修标题"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msg"
                android:layout_gravity="center"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:background="@mipmap/right" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="一级区域"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请选择维修地区"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/select"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:popupBackground="@color/light"
                android:spinnerMode="dialog" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="二级区域"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请选择维修地区"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

            <!--<Spinner-->
                <!--android:id="@+id/select2"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="end"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:popupBackground="@color/light"-->
                <!--android:spinnerMode="dialog" />-->
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/light" />


        <FrameLayout
            android:id="@+id/total_Hand42"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="报修项目"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="报修项目"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/select3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:popupBackground="@color/light"
                android:spinnerMode="dialog" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/light" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:text="问题描述"
                android:textColor="@color/black"
                android:textSize="12dp" />
            />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/write"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="输入问题"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/speak" />

            <TextView
                android:id="@+id/number_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:text="200" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/light" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="学号"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/usernumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:hint="输入学号"
                android:inputType="number"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:padding="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="联系人"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center|top"
                android:layout_marginRight="120dp"
                android:src="@mipmap/xx" />

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:hint="输入姓名"
                android:inputType="text"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:padding="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="联系电话"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:hint="输入电话"
                android:inputType="number"
                android:textColorHint="@color/light"
                android:textSize="17dp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:padding="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="预约时间"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="2dp"
                android:background="@drawable/shape1"
                android:text="选择时间" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="上传图片" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/photo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/photo"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/pane"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>



    </LinearLayout>


</ScrollView>
    <Button

        android:id="@+id/put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white" />
</RelativeLayout>
