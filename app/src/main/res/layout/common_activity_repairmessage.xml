<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/back_msg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="报修单"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/put"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/click_more"
            android:text="提交"
            android:textColor="@color/black" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!--/*-->
        <!--取消自动弹出键盘-->
        <!--*/-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/total_Hand"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/click_more"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:duplicateParentState="false"
                            android:text="报修标题"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:duplicateParentState="false"
                            android:hint="输入报修标题"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/right"
                            android:duplicateParentState="false" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="位置"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            android:maxLines="1"
                            android:hint="输入房间号或地点"
                            android:textColorHint="@color/light"
                            android:textSize="17dp" />

                        <ImageButton
                            android:id="@+id/igb_location"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:layout_margin="5dp"
                            android:background="@mipmap/locationss"
                            android:scaleType="fitXY" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light" />

                    <FrameLayout
                        android:id="@+id/total_Hand42"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="报修项目"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_rpairType"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:hint="请选择"
                            android:textColorHint="@color/light"
                            android:textSize="17dp" />

                        <Spinner
                            android:id="@+id/select3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:popupBackground="@color/light"
                            android:spinnerMode="dialog" />
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:text="问题描述"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/write"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:gravity="top"
                            android:hint="报修内容(房间号故障等,必填)"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageButton
                            android:id="@+id/speak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@mipmap/speak" />

                        <TextView
                            android:id="@+id/number_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="10dp"
                            android:text="200"
                            android:textSize="18dp" />

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="学工号"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/usernumber"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:hint="输入学工号"
                            android:inputType="number"
                            android:textColorHint="@color/light"
                            android:textSize="17dp" />


                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:padding="2dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="联系人"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <!--<ImageView-->
                        <!--android:layout_width="15dp"-->
                        <!--android:layout_height="15dp"-->
                        <!--android:layout_gravity="center|top"-->
                        <!--android:layout_marginRight="120dp"-->
                        <!--android:src="@mipmap/xx" />-->

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:hint="输入姓名"
                            android:inputType="text"
                            android:textColorHint="@color/Red"
                            android:textSize="17dp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:padding="2dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="联系电话"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:hint="输入电话"
                            android:inputType="number"
                            android:textColorHint="@color/Red"
                            android:textSize="17dp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:padding="2dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="预约时间"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_getTime"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_margin="2dp"
                            android:drawableRight="@mipmap/common_right"
                            android:gravity="center"
                            android:hint="请选择时间"
                            android:textSize="17dp" />

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="上传图片"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/igb_uploadPhoto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/common_item_upload"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">


                        <ImageView
                            android:id="@+id/iv_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center" />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>
